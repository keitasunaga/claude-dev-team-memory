{
  "name": "mcp-memory-server",
  "version": "1.0.0",
  "description": "MCP Memory Server for persistent context management in Claude Code",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-memory-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "migrate": "tsx scripts/migrate.ts",
    "setup": "tsx scripts/setup.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "memory",
    "context-management",
    "dev-team"
  ],
  "author": "sunagakeita",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/keitasunaga/claude-dev-team-memory"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@types/js-yaml": "^4.0.9",
    "better-sqlite3": "^9.0.0",
    "drizzle-orm": "^0.29.0",
    "js-yaml": "^4.1.0",
    "lru-cache": "^11.1.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
